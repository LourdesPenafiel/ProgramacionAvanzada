{% extends "::base.html.twig" %}

{% block title %}Formulario{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/framework/css/estilo.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    {{ form_start(form)}}
    <h1>Modificar registro de facultad.</h1>
    
    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.nombre) }}</div>
        <div class="form_label">{{ form_label(form.nombre) }}</div>
        <div class="form_input">{{ form_widget(form.nombre,{'attr': {'class': 'form_input'}}) }}</div>
    </div>
    
    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.carrera) }}</div>
        <div class="form_label">{{ form_label(form.carrera) }}</div>
        <div class="form_input">{{ form_widget(form.carrera,{'attr': {'class': 'form_input'}}) }}</div>
    </div>

    <div class="form_bloque">
        <div class="form_error">{{ form_errors(form.descripcion) }}</div>
        <div class="form_label">{{ form_label(form.descripcion) }}</div>
        <div class="form_input">{{ form_widget(form.descripcion,{'attr': {'class': 'form_input'}}) }}</div>
    </div>
  
    {{ form_widget(form.Guardar, {'label' : 'Modificar', 'attr': {'class': 'boton'}}) }}

    <div class="form_bloque">
        {{form_end(form) }}
    {% endblock %}


